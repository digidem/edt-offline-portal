{
  "name": "edt-offline-portal",
  "license": "CC0-1.0",
  "version": "v1.0.0-beta.7",
  "scripts": {
    "dev": "nuxt",
    "build:offline": "npm run downloadInstallers && nuxt build",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "start": "nuxt start",
    "release": "nuxt build && nuxt generate && tar -czf portal_`date +%Y%m%d_%H%M`.tar.gz dist",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore",
    "lint:prettier": "prettier --check .",
    "lint:all": "yarn lint:js && yarn lint:style && yarn lint:prettier",
    "lint": "prettier --write --list-different . && yarn lint:js --fix && yarn lint:style --fix",
    "prepare": "husky install",
    "downloadInstallers": "node src/scripts/getInstallers.js"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --cache",
    "*.{css,scss,sass,html,vue}": "stylelint",
    "*.**": "prettier --check --ignore-unknown"
  },
  "dependencies": {
    "@nuxt/content": "^1.15.1",
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/i18n": "^7.3.1",
    "@nuxtjs/svg": "^0.4.0",
    "is-http": "^0.0.2",
    "nuxt": "^2.16.2",
    "nuxt-clipboard": "^0.0.7"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.3",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@nuxtjs/eslint-config": "^12.0.0",
    "@nuxtjs/eslint-module": "^3.1.0",
    "@nuxtjs/localforage": "^1.1.0",
    "@nuxtjs/pwa": "^3.3.5",
    "@nuxtjs/stylelint-module": "^4.2.1",
    "cli-progress": "^3.12.0",
    "colors": "^1.4.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nuxt-windicss": "^2.6.0",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.4",
    "stylelint": "^15.2.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^30.0.1",
    "wget-improved": "^3.3.1"
  }
}
